<model>
    <mount>//OPNsense/nocconfig/ezmesh</mount>
    <description>
        Ezmesh configuration
    </description>
    <items>
        <!-- container -->
        <ezmesh>
            <!-- fields -->
            <Enabled type="BooleanField">
                <default>1</default>
                <Required>Y</Required>
            </Enabled>
            <SSID type="TextField">
                <default>NovaIntechs</default>
                <Required>Y</Required>
            </SSID>
            <Password type="TextField">
                <default>nova</default>
                <Required>Y</Required>
            </Password>
        </ezmesh>
    </items>
</model>
